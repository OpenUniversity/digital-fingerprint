    <script>
    document.getElementById('testSAAS').addEventListener('click', () => {
      let url = document.getElementById('urlToCheck').value;
      let badURL = document.getElementById('badURL').value;
      let requestURL = `/isItForbidden?url=${url}&badURL=${badURL}`;
      fetch(requestURL, {})
      .then((response) => {
        return response.json();
      })
      .then((jsonObject) => {
        document.getElementById('result').innerHTML = jsonObject.result;
      });
      return false;
    });
    </script>
