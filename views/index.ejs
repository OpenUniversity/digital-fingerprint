<!doctype html>
<html dir="<%= __('ltr')%>" lang="<%= __('lang')%>">

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <title>Digital fingerprint</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills float-right">
          <li class="nav-item">
            <a class="nav-link" href="/?lang=en"><%= __('English')%></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/?lang=he"><%= __('Hebrew')%></a>
          </li>
        </ul>
      </nav>
      <h3 class="text-muted">
        <%= __('Digital Fingerprint test')%>
      </h3>
    </div>
    <div class="jumbotron">
      <h1 class="display-3">
        <%= __('Digital Fingerprint test')%>
      </h1>
      <p class="lead">
        <%= __('What if I told you')%>
      </p>
      <p>
        <a class="btn btn-lg btn-success" href="https://github.com/barzik/digital-fingerprint" target="_blank" role="button">
          <%= __('Github page')%>
        </a>
      </p>
    </div>
    <div class="row marketing">
      <div class="col-lg-12">
        <%= __('intro1')%>
      </div>
    </div>

    <div class="row marketing" id="calculating">
      <div class="col-lg-12" id="gear">
        <p class="text-center">
          <%= __('Calculating... please hold on.')%>
        </p>
        <p class="text-center"><img src="/images/cog-wheel.png" alt="rotating gear" /></p>
      </div>
    </div>
    <div class="row marketing" id="name-container" style="display: none;">
      <div class="col-lg-12">
        <p class="text-center">
          <%= __('I FOUND YOU! Your name is')%> <strong id="name-display"></strong>,
            <%= __('shame shame shame!')%>
        </p>
        <p class="text-center"><img src="/images/Evil-Monkey.png" alt="Evil, pointing monkey" /></p>
      </div>
    </div>
    <div class="row marketing" id="tryit-container" style="display: none;">
      <div class="col-lg-12">
        <p>
          <%= __('OK, your name was recorded. Now open this browser in incognito mode!')%>
        </p>
        <p class="text-center"><img src="/images/try.gif" alt="Yoda, try" /></p>
      </div>
    </div>

    <div class="row" id="form-container" style="display: none">
      <div class="col-lg-12">
        <%= __('intro2')%>
      </div>
      <div class="col-lg-3 offset-lg-4">
        <form class="form-signin">
          <label for="name"><%= __('Insert Your name')%></label>
          <input class="form-control" type="text" id="name" required="required" placeholder="<%= __('Your name')%>" />
          <input type="hidden" id="hash" />
          <button id="initHashInsertion" class="btn btn-lg btn-primary btn-block" type="button"><%= __('Submit')%></button>
          <div id="result"></div>
        </form>
      </div>
    </div>

  </div>
  <!-- /container -->
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fingerprintjs2/1.5.1/fingerprint2.min.js"></script>
<script src="/js/fingerprint-serve.js"></script>

</html>
